<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ben.shiro.mapper.PermissionMapper">

    <!-- 开启二级缓存 -->
<!--    <cache type="org.mybatis.caches.ehcache.LoggingEhcache"/>-->

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.ben.shiro.pojo.bo.SysPermission">
    <result column="id" property="id" />
        <result column="parent" property="parent" />
        <result column="name" property="name" />
        <result column="permission" property="permission" />
        <result column="sort" property="sort" />
        <result column="href" property="href" />
        <result column="target" property="target" />
        <result column="icon" property="icon" />
        <result column="is_show" property="isShow" />
        <result column="comment" property="comment" />
        <result column="status" property="status" />
        <result column="create_id" property="createId" />
        <result column="create_time" property="createTime" />
        <result column="update_id" property="updateId" />
        <result column="update_time" property="updateTime" />
        <result column="delete_flag" property="deleteFlag" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, parent, name, permission, sort, href, target, icon, is_show, comment, status, create_id, create_time, update_id, update_time, delete_flag
    </sql>

    <select id="select">
        select id, parent, name, permission, sort, href, target, icon, is_show, comment, status, create_id, create_time, update_id, update_time, delete_flag from s_sys_permission
    </select>
</mapper>
